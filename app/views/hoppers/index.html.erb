<div class="row">
  <% if current_user.show_greeting || !current_user.pinned_hopper.nil? %>
    <div class="col-md-6 hopper-greeting">
      <% if !current_user.pinned_hopper.nil? %>
        <%= render "hoppers/pinned_hopper", hopper: current_user.pinned_hopper %>
      <% elsif current_user.show_greeting %>
        <%= render "shared/greeting", hoppers: @hoppers %>
      <% end %>
    </div>
    <div class="col-md-1"></div>
  <% end %>
  <div class="col-md-5">
    <h2>Hoppers</h2>
    <%= bootstrap_form_for Hopper.new, html: {class: 'form-inline'} do |f| %>
      <%= f.text_field :title, hide_label: true, placeholder: 'Hopper Title' %>
      <%= f.submit 'Add', class: "btn btn-success"%>
    <% end %>
    <%= render "hoppers/hoppers", hoppers: @hoppers %>
  </div>
</div>
