<div class="row">
  <div class="col-md-6">
    <%= render "shared/greeting", hoppers: @hoppers %>
  </div>
  <div class="col-md-5 col-md-offset-1">
    <h2>Hoppers</h2>
    <%= bootstrap_form_for Hopper.new, html: {class: 'form-inline'} do |f| %>
      <%= f.text_field :title, hide_label: true, placeholder: 'Hopper Title' %>
      <%= f.submit 'Add', class: "btn btn-success"%>
    <% end %>
    <%= render "hoppers/hoppers", hoppers: @hoppers %>
  </div>
</div>
